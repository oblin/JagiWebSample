@model IEnumerable<JagiWebSample.Areas.Admin.Models.SchemaTablesView>

@{
    ViewBag.Title = "資料庫表格列表";
    ViewBag.Name = "Schema";
}

<h2>資料庫表格列表</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CatalogName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SchemaName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CatalogName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SchemaName)
        </td>
        <td>
            @Html.ActionLink("顯示欄位", "Details", new { id = item.Name }) 
        </td>
    </tr>
}

</table>
